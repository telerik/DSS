# what's this?
# - http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = off

[*.scss]
indent_style = space
indent_size = 4

[*.{js,json}]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4

[package.json]
indent_style = space
indent_size = 2
